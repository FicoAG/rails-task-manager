
<h2 class="my-3">Create Task</h2>
<%= form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title, class: "labels" %>
  <%= f.text_field :title, class: "form-control"  %>
</div>
<div class="form-group">
  <%= f.label :details,  class: "labels" %>
  <%= f.text_field :details, class: "form-control"  %>
</div>
  <%= f.submit "Create Task", class: "btn btn-primary py-2 px-3 rounded" %>
   <%= link_to "Tasks", tasks_path,  class: "btn btn-secondary my-5 py-2 px-3 rounded"%>

<% end %>

